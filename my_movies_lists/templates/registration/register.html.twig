{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'jumbotron'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-group'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-group'}}) }}
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-group'}}) }}

        <button class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
